<vbox style="padding: 5px;" width="100%" height="100%">
    <menubar width="100%">
        <menu text="File">
            <menuitem text="New Project" id="menu_file_new"/>
            <menuseparator />
            <menuitem text="Open Project" id="menu_file_open"/>
            <menuseparator />
            <menuitem text="Save Project" id="menu_file_save"/>
            <menuitem text="Save Project as..." id="menu_file_saveas"/>
            <menuseparator />
            <menuitem text="Quit" id="menu_file_quit"/>
        </menu>
        <menu text="Edit">
            <menuitem text="Undo" id="menu_edit_undo"/>
            <menuitem text="Redo" id="menu_edit_redo"/>
            <menuseparator />
            <menuitem text="Cut" id="menu_edit_cut"/>
            <menuitem text="Copy" id="menu_edit_copy"/>
            <menuitem text="Paste" id="menu_edit_paste"/>
            <menuseparator />
            <menuitem text="Delete" id="menu_edit_delete"/>
        </menu>
    </menubar>
    <hbox width="100%" height="100%">
        <panel width="20%" height="100%">
            <header>
                <hbox>
                    <button text="Synthesize" id="btn_synth"/>
                    <button text="Play" id="btn_play"/>
                    <button text="Stop" id="btn_stop"/>
                </hbox>
            </header>
            <box width="100%" height="100%">
                <scrollview id="tracks_scrollview" width="100%" height="100%" contentWidth="100%">
                    <vbox width="100%" style="padding:5px;">
                        <frame text="Track 1" width="100%" style="margin-bottom:5px;">
                            <hbox width="100%">
                                <button text="Mute" width="50%"/>
                                <button text="Solo" width="50%"/>
                            </hbox>
                            <hbox width="100%">
                                <button text="Vocal Mode" width="100%"/>
                            </hbox>
                        </frame>
                    </vbox>
                </scrollview>
            </box>
        </panel>
        <panel width="100%" height="100%">
        </panel>
    </hbox>
</vbox>