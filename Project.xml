<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://lime.software/project/1.0.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://lime.software/project/1.0.2 http://lime.software/xsd/project-1.0.2.xsd">

	<!--Actual exe stuffs-->
	<app title="Solar Synth" file="SolarSynth" main="Main" version="V1.0.0-420" company="HaxeFlixel" />

	<!--Flixel things or smth idk-->
	<app preloader="flixel.system.FlxPreloader" />
	<set name="SWF_VERSION" value="11.8" />

    <!--Window stuffs-->
	<window width="1280" height="720" fps="120" background="#000000" hardware="true" vsync="true" />
	<window if="html5" resizable="false" />
	<window if="hl" orientation="landscape" fullscreen="false" resizable="true" />

	<!--Paths-->
	<set name="BUILD_DIR" value="export" />
	<source path="source" />
	<assets path="voicebanks" />
    <assets path="esper" />
    <assets path="_assets" embed="true"/>

	<!--Libraries-->
	<haxelib name="flixel" />
	<haxelib name="flixel-addons" />
	<haxelib name="flixel-ui" />
    <haxelib name="funkin.vis" />
    <haxelib name="grig.audio" />

	<!--Removing these, no need for them-->
	<haxedef name="FLX_NO_TOUCH"/>
	<haxedef name="FLX_NO_GAMEPAD" />
	<haxedef name="FLX_NO_SOUND_TRAY" />
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="FLX_NO_DEBUG" />

    <!--Removing these, no need for them-->
    <icon path="assets/SSLHighres.png" />
</project>
